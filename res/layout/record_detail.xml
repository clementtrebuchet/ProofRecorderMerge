<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/widget50"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <RelativeLayout
        android:id="@+id/mLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp" >

        <RadioGroup
            android:id="@+id/mWrapper"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignParentTop="true"
            tools:ignore="UselessParent">

            <RadioGroup
                android:id="@+id/mIvTvWrapper"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:orientation="horizontal" >

                <com.actionbarsherlock.internal.widget.IcsLinearLayout
                    android:id="@+id/mIvFrame"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top" >

                    <ImageView
                        android:id="@+id/mPhoneIv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:src="@drawable/detail_phone_call" />
                </com.actionbarsherlock.internal.widget.IcsLinearLayout>

                <RadioGroup
                    android:id="@+id/mPcScWrapper"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/mPhoneContact"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="@string/unknow_contact"
                        android:textColor="#ff010101"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <RadioGroup
                        android:id="@+id/mSenseWrapper"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/mSenseTv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginRight="10dp"
                            android:layout_marginEnd="10dp"
                            android:text="@string/call_direction"
                            android:textSize="12sp"
                            android:textStyle="bold|italic" />

                        <ImageView
                            android:id="@+id/mSenseIv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:src="@drawable/incoming_call" />
                    </RadioGroup>

                    <TextView
                        android:id="@+id/mPhone"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center"
                        android:padding="10dp"
                        android:text="@string/record_detail_phone_number"
                        android:textSize="18sp"
                        android:textStyle="bold" />
                </RadioGroup>
            </RadioGroup>

            <RadioGroup
                android:id="@+id/mSenseAndTextWrapper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center" >

                <ImageView
                    android:id="@+id/mPlayFile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/quick_play" />
            </RadioGroup>

            <RadioGroup
                android:id="@+id/mDateAndSizeWrapper"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/mDateOfCall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="@string/date_of_call"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/mSizeOfFile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:padding="10dp"
                    android:text="@string/size_of_song"
                    android:textColor="#ff07c5df"
                    android:textStyle="bold" />
            </RadioGroup>

            <RadioGroup
                android:id="@+id/mDurationOf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="20dp"
                android:gravity="end"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/mDurationOfFile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/song_duration"
                    android:textColor="#ff07c5df"
                    android:textStyle="bold" />
            </RadioGroup>

            <TextView
                android:id="@+id/mId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/mTextView"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/mFilePath"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/mTextView"
                android:visibility="invisible" />
        </RadioGroup>
    </RelativeLayout>

</ScrollView>