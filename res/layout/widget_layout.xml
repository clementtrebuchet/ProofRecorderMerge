<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_wid"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/myshape"
    android:gravity="top|center_horizontal"
    android:orientation="vertical"
    android:visibility="visible" >

    <LinearLayout
        android:layout_width="234dp"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:padding="4dp" >

        <ImageButton
            android:id="@+id/imageButtonon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/action_item_btn"
            android:padding="2dp"
            android:src="@drawable/off" />

        <ImageButton
            android:id="@+id/imageButtonstoprec"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.33"
            android:background="@drawable/action_item_btn"
            android:padding="0.5dp"
            android:src="@drawable/stoprec" />

        <!--
        <ImageButton
            android:id="@+id/imageButton4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:src="@drawable/plug_wav_wi" />

        <ImageButton
            android:id="@+id/imageButton5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:src="@drawable/settings_wi" />
        -->

        <ImageButton
            android:id="@+id/imageButtonbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/action_item_btn"
            android:padding="2dp"
            android:src="@drawable/box" />

    </LinearLayout>

</LinearLayout>