<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_selector"
    android:orientation="horizontal"
    android:padding="5dip" >

    <!-- ListRow Left sied Thumbnail image -->

    <LinearLayout
        android:id="@+id/thumbnailDossier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="5dip"
        android:background="@drawable/image_bg"
        android:padding="3dip" >

        <ImageView
            android:id="@+id/list_imageDossier"
            android:layout_width="48dip"
            android:layout_height="48dip"
            android:contentDescription="@+string/arrow_record" />
    </LinearLayout>

    <ListView
        android:id="@id/android:list"
        android:layout_width="0dip"
        android:layout_height="fill_parent"
        android:drawSelectorOnTop="true"
        android:smoothScrollbar="true" />

    <!-- android:id="@+id/idrecord" -->

    <TextView
        android:id="@+id/idrecordDossier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/thumbnailDossier"
        android:layout_toRightOf="@+id/thumbnailDossier"
        android:text="@+string/tableId"
        android:textColor="#040404"
        android:textSize="15dip"
        android:textStyle="bold"
        android:typeface="sans" />

    <!-- android:id="@+id/number" -->

    <TextView
        android:id="@+id/nomDossier"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/idrecordDossier"
        android:layout_marginLeft="50dip"
        android:layout_toRightOf="@+id/thumbnailDossier"
        android:text="@+string/tableNumero"
        android:textColor="#343434"
        android:textSize="16dip"
        android:textStyle="bold"
        android:typeface="sans" />

    <TextView
        android:id="@+id/numberDossier"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nomDossier"
        android:layout_toRightOf="@+id/thumbnailDossier"
        android:textColor="#10bcc9"
        android:textSize="14dip"
        android:textStyle="bold"
        />
    <!-- @+id/timehumanreadable -->


    <!-- <TextView -->
