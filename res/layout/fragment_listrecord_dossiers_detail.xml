    <!-- android:layout_width="wrap_content" -->
    <!-- android:layout_height="wrap_content" -->
    <!-- android:layout_alignParentRight="true" -->
    <!-- android:layout_alignTop="@id/idrecordDossier" -->
    <!-- android:layout_marginRight="5dip" -->
