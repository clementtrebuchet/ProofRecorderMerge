<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	android:id="@+id/about_linear"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:orientation="vertical"
	xmlns:android="http://schemas.android.com/apk/res/android">
<TableRow
	android:id="@+id/row_app_desc"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:padding="10dp"
	android:orientation="horizontal">
<ImageView
	android:id="@+id/img_app"
	android:contentDescription="@string/about_app"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:padding="6dp"
	android:src="@drawable/ic_home" />
<TextView
	android:id="@+id/txt_app"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:gravity="center"
	android:layout_weight="1"  
	android:ellipsize="none"  
	android:maxLines="100"  
	android:scrollHorizontally="false" />
</TableRow>
<TextView
	android:id="@+id/some_links"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:text="@string/about_some_links" />
<ListView
	android:id="@+id/some_links_list"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:padding="5dp" />
</LinearLayout>

