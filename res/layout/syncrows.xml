<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#f8f9fe"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/idrecordsync"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@+string/tableId"
        android:textColor="#040404"
        android:textSize="15dip"
        android:textStyle="bold"
        android:typeface="sans" />

    <!-- android:id="@+id/number" -->

    <TextView
        android:id="@+id/numbersync"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/idrecordsync"
        android:layout_marginTop="1dip"
        android:text="@+string/tableNumero"
        android:textColor="#343434"
        android:textSize="18dip"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/senssync"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/numbersync"
        android:textColor="#10bcc9"
        android:textSize="13dip"
        android:textStyle="bold" />
    <!-- @+id/timehumanreadable -->

    <TextView
        android:id="@+id/timehumanreadablesync"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/idrecordsync"
        android:layout_marginRight="5dip"
        android:gravity="right"
        android:text="@+string/tableHeure"
        android:textColor="#10bcc9"
        android:textSize="16dip"
        android:textStyle="bold" />

</RelativeLayout>